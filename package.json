{
  "name": "node-hono-chanfana-api",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "tsc",
    "dev": "tsc && tsc-watch --onSuccess \"node dist/index.js\"",
    "dev2": "tsc-watch  --onSuccess \"ts-node src/index.ts\"",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "build:prod": "npm run clean && npm run build",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "ts-node seed.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.0",
    "@types/pg": "^8.15.5",
    "chanfana": "^2.6.3",
    "csv-parse": "^6.1.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "hono": "^4.6.20",
    "pg": "^8.16.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "22.13.0",
    "tsc-watch": "^7.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
